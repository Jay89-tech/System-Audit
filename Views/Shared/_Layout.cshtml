<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Skills Audit System</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <div class="layout-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>Skills Audit System</h2>
            </div>
            <nav class="sidebar-nav">
                <ul>
                    <li>
                        <a asp-controller="Dashboard" asp-action="Index">
                            <i class="fas fa-home"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Employee" asp-action="Index">
                            <i class="fas fa-users"></i>
                            <span>Employees</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Qualification" asp-action="PendingApprovals">
                            <i class="fas fa-certificate"></i>
                            <span>Qualifications</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Training" asp-action="Index">
                            <i class="fas fa-graduation-cap"></i>
                            <span>Trainings</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Report" asp-action="Index">
                            <i class="fas fa-chart-bar"></i>
                            <span>Reports</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Top Navbar -->
            <nav class="top-navbar">
                <div>
                    <h3 style="margin: 0; color: var(--dark-grey);">Welcome, @ViewBag.CurrentUserName</h3>
                    <p style="margin: 0; font-size: 14px; color: #6b7280;">@ViewBag.CurrentUserEmail</p>
                </div>
                <div class="user-info">
                    <div class="user-avatar">
                        @(ViewBag.CurrentUserName?.ToString()?.Substring(0, 1).ToUpper() ?? "A")
                    </div>
                    <form asp-controller="Auth" asp-action="Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="logout-btn">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </button>
                    </form>
                </div>
            </nav>

            <!-- Content Wrapper -->
            <div class="content-wrapper">
                <!-- Display Messages -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i>
                        <span>@TempData["SuccessMessage"]</span>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-error">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>@TempData["ErrorMessage"]</span>
                    </div>
                }
                @if (TempData["InfoMessage"] != null)
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <span>@TempData["InfoMessage"]</span>
                    </div>
                }
                @if (TempData["WarningMessage"] != null)
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span>@TempData["WarningMessage"]</span>
                    </div>
                }

                <!-- Main Content -->
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>