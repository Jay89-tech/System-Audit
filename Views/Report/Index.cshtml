@{
    ViewData["Title"] = "Reports";
}

<div class="page-header">
    <h1><i class="fas fa-chart-bar"></i> Reports & Analytics</h1>
    <div class="breadcrumb">
        <span>Home</span>
        <span>/</span>
        <span>Reports</span>
    </div>
</div>

<!-- Report Categories -->
<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px; margin-bottom: 30px;">

    <!-- Employee Reports -->
    <div class="card">
        <div class="card-header" style="background: linear-gradient(135deg, var(--deep-blue) 0%, var(--light-blue) 100%); color: white;">
            <h3><i class="fas fa-users"></i> Employee Reports</h3>
        </div>
        <div class="card-body">
            <p style="color: #6b7280; margin-bottom: 20px;">Generate comprehensive reports about employees and their profiles.</p>

            <a asp-controller="Employee" asp-action="ExportPdf" class="btn btn-danger" style="width: 100%; margin-bottom: 10px;">
                <i class="fas fa-file-pdf"></i> Employees PDF Report
            </a>

            <a asp-controller="Employee" asp-action="ExportExcel" class="btn btn-success" style="width: 100%;">
                <i class="fas fa-file-excel"></i> Employees Excel Report
            </a>
        </div>
    </div>

    <!-- Qualification Reports -->
    <div class="card">
        <div class="card-header" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white;">
            <h3><i class="fas fa-certificate"></i> Qualifications</h3>
        </div>
        <div class="card-body">
            <p style="color: #6b7280; margin-bottom: 20px;">View and export qualification approval statistics.</p>

            <a asp-action="QualificationsSummary" class="btn btn-primary" style="width: 100%; margin-bottom: 10px;">
                <i class="fas fa-chart-pie"></i> View Summary
            </a>
        </div>
    </div>

    <!-- Training Reports -->
    <div class="card">
        <div class="card-header" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); color: white;">
            <h3><i class="fas fa-graduation-cap"></i> Training Reports</h3>
        </div>
        <div class="card-body">
            <p style="color: #6b7280; margin-bottom: 20px;">Track training progress and completion rates.</p>

            <a asp-action="TrainingOverview" class="btn btn-primary" style="width: 100%; margin-bottom: 10px;">
                <i class="fas fa-chart-line"></i> View Overview
            </a>

            <a asp-controller="Training" asp-action="ExportProgress" class="btn btn-success" style="width: 100%;">
                <i class="fas fa-file-excel"></i> Export Progress
            </a>
        </div>
    </div>

    <!-- Skills Audit -->
    <div class="card">
        <div class="card-header" style="background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); color: white;">
            <h3><i class="fas fa-star"></i> Skills Audit</h3>
        </div>
        <div class="card-body">
            <p style="color: #6b7280; margin-bottom: 20px;">Analyze skills distribution and identify gaps.</p>

            <a asp-action="SkillsAudit" class="btn btn-primary" style="width: 100%; margin-bottom: 10px;">
                <i class="fas fa-chart-bar"></i> View Analysis
            </a>

            <a asp-action="ExportSkillsAudit" class="btn btn-success" style="width: 100%;">
                <i class="fas fa-file-excel"></i> Export Summary
            </a>
        </div>
    </div>

    <!-- Workforce Planning -->
    <div class="card">
        <div class="card-header" style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); color: white;">
            <h3><i class="fas fa-sitemap"></i> Workforce Planning</h3>
        </div>
        <div class="card-body">
            <p style="color: #6b7280; margin-bottom: 20px;">Strategic workforce insights and planning.</p>

            <a asp-action="WorkforcePlanning" class="btn btn-primary" style="width: 100%;">
                <i class="fas fa-users-cog"></i> View Planning Dashboard
            </a>
        </div>
    </div>

    <!-- Skills Gap Analysis -->
    <div class="card">
        <div class="card-header" style="background: linear-gradient(135deg, #ec4899 0%, #db2777 100%); color: white;">
            <h3><i class="fas fa-chart-area"></i> Skills Gap Analysis</h3>
        </div>
        <div class="card-body">
            <p style="color: #6b7280; margin-bottom: 20px;">Identify skill gaps and training needs.</p>

            <a asp-action="SkillsGapAnalysis" class="btn btn-primary" style="width: 100%;">
                <i class="fas fa-project-diagram"></i> View Analysis
            </a>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="card">
    <div class="card-header">
        <h3><i class="fas fa-tachometer-alt"></i> Quick Statistics</h3>
    </div>
    <div class="card-body">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; text-align: center;">

            <!-- Dashboard -->
            <div style="padding: 20px; background: linear-gradient(135deg, var(--deep-blue) 0%, var(--light-blue) 100%); border-radius: 12px; color: white;">
                <i class="fas fa-users" style="font-size: 36px; margin-bottom: 10px;"></i>
                <h2 style="margin: 0;">View Dashboard</h2>
                <p style="color: rgba(255,255,255,0.8); margin: 5px 0;">for live stats</p>
            </div>

            <!-- Qualifications -->
            <div style="padding: 20px; background: linear-gradient(135deg, #10b981 0%, #059669 100%); border-radius: 12px; color: white;">
                <i class="fas fa-certificate" style="font-size: 36px; margin-bottom: 10px;"></i>
                <h2 style="margin: 0;">Qualifications</h2>
                <p style="color: rgba(255,255,255,0.8); margin: 5px 0;">Approval overview</p>
            </div>

            <!-- Training -->
            <div style="padding: 20px; background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); border-radius: 12px; color: white;">
                <i class="fas fa-graduation-cap" style="font-size: 36px; margin-bottom: 10px;"></i>
                <h2 style="margin: 0;">Training Stats</h2>
                <p style="color: rgba(255,255,255,0.8); margin: 5px 0;">Completion progress</p>
            </div>

            <!-- Skills -->
            <div style="padding: 20px; background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); border-radius: 12px; color: white;">
                <i class="fas fa-star" style="font-size: 36px; margin-bottom: 10px;"></i>
                <h2 style="margin: 0;">Skills Audit</h2>
                <p style="color: rgba(255,255,255,0.8); margin: 5px 0;">Gap insights</p>
            </div>

        </div>
    </div>
</div>
